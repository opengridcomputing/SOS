Name: @PACKAGE_NAME@
Version: @PACKAGE_VERSION@
Release: 1%{?dist}
Summary: Scalable Object Storage

%define _grp Application/Databases
Group: %{_grp}
License: GPLv2 or BSD
URL: http://www.ogc.us
Source0: %{name}-%{version}.tar.gz

Requires: libyaml >= 0.1.4
Prefix: @prefix@
%define _prefix @prefix@

%description
Scalable Object Storage (SOS) ...


%prep
%setup -q


%build
%configure @ac_configure_args@
make %{?_smp_mflags}


%install
make install DESTDIR=%{buildroot}
rm -f %{buildroot}%{_libdir}/*.la

%clean
rm -rf %{buildroot}

# files for main package
%files
%{_bindir}/sos_*
%{_libdir}/libidx_*
%{_libdir}/libkey_*
%{_libdir}/libods.*
%{_libdir}/libsos.*
%if "@ENABLE_SWIG_TRUE@x" == "x"
%{_prefix}/lib*/python*/site-packages/sos/
%endif


# SOS-devel package
%package devel
Summary: Development files for SOS
Group: %{_grp}
%description devel
PLACE HOLDER FOR sos-devel DESCRIPTION
%files devel
%defattr(-,root,root)
%{_includedir}/ods/
%{_includedir}/sos/


%if "@ENABLE_DOC_TRUE@x" == "x"
# SOS-doc package
%package doc
Summary: SOS documentation
Group: %{_grp}
%description doc
Documetnation for SOS package.
%files doc
%defattr(-,root,root)
%if "@ENABLE_DOC_HTML_TRUE@x" == "x"
%{_datadir}/doc
%endif
%endif


%if "@ENABLE_BWX_TRUE@x" == "x"

# SOS-bwx package
%package bwx
Summary: bwx
Group: %{_grp}
%description bwx
SOS - Blue Water specific package.
%files bwx
%defattr(-,root,root)
%{_bindir}/bwx_*
%{_prefix}/lib*/python*/site-packages/bwx/

# SOS-bwx package
%package bwx-devel
Summary: bwx-devel
Group: %{_grp}
%description bwx-devel
Development files for SOS-bwx package.
%files bwx-devel
%defattr(-,root,root)
%{_includedir}/bwx/

%endif # ENABLE_BWX_TRUE

%changelog
